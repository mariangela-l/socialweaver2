<div class="col-md-4 col-sm-6 col-xs-12">
	<div class="thumbnail">
		<%= link_to image_tag(project.image_url, alt: project.title, class: 'img-responsive'), project_path(project) %>
			<div class="caption">
				<p class="text-uppercase"><%= link_to project.title, project_path(project) %></p>
				<p><%= project.category.name %></p>
				<p>Goal $<span><%= project.goal %></span></p>
				
				<div class="project-bar">
					<div class="progress">
						<div class="progress-bar-sucess" role="progressbar" aria-valuenow="100%" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
							<span class="sr-only">100% Complete</span>
						</div>
					</div>
				</div>

				<div class="stats">
					<div>
						<p>100%<span>funded</span></p>
						<p>$1000 <span>pledged</span></p>
						<p>10 <span>days to go</span></p>
					</div>
				</div>

				<div class="link text-center">
				<p><%= link_to "View Project", project_path(project), class: 'btn btn-success btn-offset-right' %></p>
				</div>
			
			</div><!--end of caption-->
	</div>
</div>



