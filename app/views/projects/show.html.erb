
<div class="project-intro">
	<div class="container">
		<div class="row">
			<p><%=link_to "Back", projects_path %></p>
		</div>

		<div class="row">
			<div class="col-md-12 text-center">
				<h2><%= @project.title %></h2>
			</div>	
		</div>

		<div class="row">
			<div class="col-md-8">
				<%= image_tag @project.image_url, width: '100%', class: "img-responsive" %>
			</div>
			
			<div class="col-md-4">	

				<% if user_signed_in?%>
				<% if @project.user_id == current_user.id %>
				<div class="project-mgmt">
					<%= link_to 'Edit',   edit_project_path(@project) %>
					<%= link_to 'Delete', project_path(@project), method: :delete, data: {confirm: "Are you sure?"} %>
				</div><!-- these links should only be visibible to admin_user with cancancan-->
				<%end%>
				<%end%>

				<div class="project-info">		
						<div class="project-bar">
							<div class="progress">
								<div class="progress-bar-sucess" role="progressbar" aria-valuenow="100%" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
							<span class="sr-only">100% Complete</span>
								</div>
							</div>
						</div>

						<div class="val">
								<p>100%<span>funded</span></p>
						<div>

					<div class="stats">
						<div class="row-stats">
							<div class="val">
								<p>$1000 <span>pledged</span></p>
							<div>
						
							<div class="val">
								<p>10 <span>days to go</span></p>
							<div>
						</div>
							
					</div>
			
				</div><!--it can be rendered as partial if wish-->
				<br><br><br>

				<div class="call-button text-center">
						
						<p><%= link_to 'Back this Project', new_project_pledge_path(@project), class: 'btn btn-success btn-lg btn-block' %></p><br>
						<p><%= link_to 'Offer a Skill', "#", class: 'btn btn-success btn-lg btn-block' %></p>
				</div>
	
			</div> <!-- end of project statistics details box-->
		</div>

	</div> <!--end of the container-->

	<div class="container">
			<div class="col-md-8">
					<p class="project-subtitle">Location:</p>						
					<p class="project-subtitle">Category: <%= @project.category.name %></p>
					<br>
					<p class="project-subtitle">About this project:</p>
					<p class="project-description"><%= @project.description %></p>
			</div><!--end of project details box-->

			<div class="col-md-4">
		
					


			</div>
	</div>

</div><!-- end of the wrap-->