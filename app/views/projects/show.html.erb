<h1>show</h1>

<div class="project-intro">
	<div class="container">

		<div class="row">
			<div class="col-md-12 text-center">
				<h2 class="project-title"><%= @project.title %></h2>
			</div>	
		</div>

		<div class="row">
			<div class="col-md-8">
				<%= link_to image_tag(@project.image_url, alt: @project.title, width: '100%', height:'300px'), project_path(@project) %>
			</div>

			<div class="col-md-4">
				<div class="project-mgmt">
					<%= link_to 'Edit',   edit_project_path(@project) %>
					<%= link_to 'Delete', project_path(@project), method: :delete, data: {confirm: "Are you sure?"} %>
				</div>
			</div>

			<div class="row">
				<div class="col-md-8">
					<p class="project-small-description"><%= @project.summary %></p>
				</div>
			</div>

		</div>

		<div class="container">
			<div class="row">
				<div class="col-md-8">
					<h3 class="project-subtitle">About this project:</h3>
						<p><%= @project.description %></p>
					<h3 class="project-subtitle">Target: </h3>
						<p><%= @project.goal %></p>
				</div>
			</div>
		</div>

	</div>

</div>